{
  "name": "shop",
  "plural": "shops",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "desc": {
      "type": "string"
    },
    "location": {
      "type": "geopoint"
    },
    "image": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "city": {
      "type": "belongsTo",
      "model": "city"
    },
    "manager": {
      "type": "belongsTo",
      "model": "user"
    },
    "reviews": {
      "type": "hasMany",
      "model": "review"
    },
    "followers": {
      "type": "hasMany",
      "model": "user"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
